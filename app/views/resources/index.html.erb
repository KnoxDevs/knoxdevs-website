<h1>Local Developer Resources
<%= if user_signed_in? then link_to raw("<i class='fa fa-plus-square-o'></i>"), new_resource_path end %>
</h1>
<div class="container">
    <% @resources.each do |resource| %>
      <div class="row">
        <div class="col-md-offset-3 col-md-6 col-md-offset-3">
          <li class='list-group-item'>
            <h4 class='list-group-item-heading'>
              <%= resource.name %>
              <%= if DateTime.now.utc - 2.days > resource.created_at then 
              raw("<span class='label label-default label-as-badge'>Newly Added</span>")
               end %>
              <div class="pull-right">
              <%= if user_signed_in? then link_to raw("<i class='fa fa-edit'></i>"), edit_resource_path(resource) end %>
              <%= if user_signed_in? then link_to raw("<i class='fa fa-remove'></i>"), resource, method: :delete, data: { confirm: 'Are you sure?' } end %>
              </div>
            </h4>
            <p class='list-group-item-text card-description'>
              <%= resource.description %>
            </p>
            <p class='list-group-item-text'>
              <a target='_blank' href='<%= resource.websiteurl %>'><%= resource.websitename %></a>
            </p>
            <p class='list-group-item-text'>
              <a target='_blank' href='http://twitter.com/<%= resource.twitter %>'>@<%= resource.twitter %> <i class='fa fa-twitter'></i></a>
            </p>
          </li>
        </div>
      </div>
    <% end %>
</div>



